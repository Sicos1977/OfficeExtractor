<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.21.0</Version>
    <Copyright>(c)2013-2022 Kees van Spelde</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>office ole word excel powerpoint rtf</PackageTags>
    <PackageReleaseNotes>- Updated nuget packages
- Added support for ole 10 native type Paintbrush-Bild</PackageReleaseNotes>
    <PackageIcon>extract-icon.png</PackageIcon>
    <RepositoryUrl>https://github.com/Sicos1977/OfficeExtractor</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageProjectUrl>https://github.com/Sicos1977/OfficeExtractor</PackageProjectUrl>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>OfficeExtractor.snk</AssemblyOriginatorKeyFile>
    <AssemblyVersion>1.21.0.0</AssemblyVersion>
    <FileVersion>1.21.0.0</FileVersion>
    <Description>Extracts embedded OLE objects from Word, Excel, PowerPoint and Open Office files without needing the original programs.</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" Version="3.3.0" />
    <PackageReference Include="MsgReader" Version="6.0.3" />
    <PackageReference Include="OpenMcdf" Version="3.0.1" />
    <PackageReference Include="PasswordProtectedChecker" Version="2.0.0" />
    <PackageReference Include="SharpCompress" Version="0.40.0" />
    <PackageReference Include="SharpZipLib" Version="1.4.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="extract-icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
