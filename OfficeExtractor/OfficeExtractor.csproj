<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.16.0</Version>
    <Copyright>(c)2013-2021 Kees van Spelde</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>office ole word excel powerpoint rtf</PackageTags>
    <PackageReleaseNotes>- Use packagePartMemoryStream instead of packagePartStream to fix the error  cannot load a non-seekable stream in .NET5
- Updated nuget packages</PackageReleaseNotes>
    <PackageIcon>extract-icon.png</PackageIcon>
    <RepositoryUrl>https://github.com/Sicos1977/OfficeExtractor</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageProjectUrl>https://github.com/Sicos1977/OfficeExtractor</PackageProjectUrl>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>OfficeExtractor.snk</AssemblyOriginatorKeyFile>
    <AssemblyVersion>1.16.0.0</AssemblyVersion>
    <FileVersion>1.16.0.0</FileVersion>
    <Description>Extracts embedded OLE objects from Word, Excel, PowerPoint and Open Office files without needing the original programs.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" Version="2.13.0" />
    <PackageReference Include="MsgReader" Version="4.1.0" />
    <PackageReference Include="OpenMcdf" Version="2.2.1.9" />
    <PackageReference Include="PasswordProtectedChecker" Version="1.3.6" />
    <PackageReference Include="SharpCompress" Version="0.29.0" />
    <PackageReference Include="SharpZipLib" Version="1.3.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="extract-icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
